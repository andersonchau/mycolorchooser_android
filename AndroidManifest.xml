<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycolorchooser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:name="MyColorChooserApp" 
        android:allowBackup="true"
        android:icon="@drawable/atp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mycolorchooser.MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mycolorchooser.ColorChooserActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mycolorchooser.OptionMainMenuActivity"
            android:screenOrientation="portrait" >
        </activity>
        
         <activity
            android:name="com.example.mycolorchooser.SoundOnOffOptionActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.example.mycolorchooser.DifficultyOptionActivity"
            android:screenOrientation="portrait" >
        </activity>
         
        <activity
            android:name="com.example.mycolorchooser.GamePauseScreenActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.mycolorchooser.GameRoundSelectionActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        
        
    </application>
	
</manifest>
